
#include <stdio.h>
#include <math.h>

int main() {
    // Write C code here
    float x,y,p;
    
    printf("Type in the first number:");
    scanf("%f",&x);
    printf("Type in the second number:");
    scanf("%f",&y);
    printf("first number = %f\n",x);
    printf("second number = %f\n",y);
    printf("Sum = %f\n",x+y);
    printf("Difference = %f\n", x-y);
    printf("Product = %f\n",x*y );
    printf("Quotient = %f\n",x/y);
    p=pow (x,y);
    printf("first to the power of second = %f\n", p);
    x = sqrt(x);
    y = sqrt(y);
    printf("Square root of first number = %f\n",x);
    printf("Square root of second number = %f\n",y);
    
    return 0;
}
