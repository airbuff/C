#include <stdio.h>

int main() {

    char input;
    
    printf("You choice from (A,B,C):");
    scanf("%c", &input);
    
    switch(input)
    {
        case 'A':
        case 'a':
            puts("You chose A");
            break;
        case 'B':
        case 'b':
            puts("B.");
            break;
        case 'C':
        case 'c':
            puts("Nice C.");
            break;
        default:
            puts("invalid choice.");
    }
    return 0;
}
